{
    "name": "brendan-mackenzie/bm-access",
    "description": "Add a flexible way to manage showing hidden fields to specific roles and/or permissions",
    "type": "library",
    "authors": [
        {
            "name": "Terence Nelson",
            "email": "terence@brendan-mackenzie.com"
        }
    ],
    "require": {
        "spatie/laravel-permission": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "BrendanMacKenzie\\BMAccess\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrendanMacKenzie\\BMAccess\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrendanMacKenzie\\BMAccess\\BMAccessServiceProvider"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.13"
    }
}
